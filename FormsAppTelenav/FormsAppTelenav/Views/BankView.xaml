<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormsAppTelenav.Views.BankView"
             BackgroundColor="#8F9E03"
             BackgroundImage="bank_background.jpg"
             
                >
    <ContentPage.Content>
        <AbsoluteLayout Padding="0,0,0,0">
            <Image Source="deposit_icon.png" x:Name="DepositIcon" AbsoluteLayout.LayoutBounds="0.7,0.70,0.16,0.16"  AbsoluteLayout.LayoutFlags="All">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="DepositIcon_Tapped" />
                </Image.GestureRecognizers>
            </Image>
            
                <Image Source="hand_credit_icon.png" x:Name="CreditIcon" AbsoluteLayout.LayoutBounds="0.7,0.85,0.16,0.16"  AbsoluteLayout.LayoutFlags="All">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="CreditIcon_Tapped" />
                    </Image.GestureRecognizers>
                </Image>
            </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>