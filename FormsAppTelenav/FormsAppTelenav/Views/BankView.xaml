<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormsAppTelenav.Views.BankView"
                >
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding MoneyStatement}" HorizontalOptions="Center"/>
            <Button Text="Buy a credit"
                    Clicked="ToCreditView_Clicked"/>
            <Label Text="{Binding ExpensesToPay}" HorizontalOptions="Center"/>
            <Label Text="{Binding MonthlyIncomeStatement}" HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>