<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormsAppTelenav.Views.MainView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding MoneyStatement, Mode=TwoWay}"
                   HorizontalOptions='Center'/>
            <Button 
                Text="Go to the bank"
                Clicked="ToBank_Clicked"
                />
            <Button 
                Text="Buy and check auctions"
                Command="{Binding AuctionHouseCommand}"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>