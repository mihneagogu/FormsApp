<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormsAppTelenav.Views.MainView">
    <ContentPage.Content>
        <StackLayout>
            <Label 
                x:Name="MoneyEntry"
                Text="{Binding MoneyStatement, Mode=TwoWay, Converter={StaticResource moneyStringCnv}}"  
                HorizontalOptions='Center'
                IsVisible="true"
            />
            <Button 
                Text="Go to the bank"
                Clicked="ToBank_Clicked"
                />
            <Button 
                Text="Buy and check auctions"
                Clicked="ToAuctionHouse_Clicked"
                />
            <Button x:Name="HistoryButton"
                Text="Check your purchase history"
                    Clicked="ToHistory_Clicked"
                    IsEnabled="False"
                    />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>