<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormsAppTelenav.Views.BuyAuctionsView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding CompanyNameStatement}" />
            <Label Text="How many auctions do you want to buy?" />
            <Entry x:Name="NumberEntry"/>
            <Label Text="{Binding PriceValueStatement}" />
            <Button Text="Confirm payment" Clicked="ConfirmedPayment_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>