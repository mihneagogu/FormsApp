<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:forms="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
             x:Class="FormsAppTelenav.Views.BuyAuctionsView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding CompanyNameStatement}" />
            <Label x:Name="BuyOrSellLabel" Text="How many auctions do you want to buy?" />
            <Entry x:Name="NumberEntry" Keyboard="Numeric"/>
            <Label Text="{Binding PriceValueStatement}" />
            <Button Text="Confirm payment" Clicked="ConfirmedPayment_Clicked"/>
            <Label x:Name="ProfitLabel" IsVisible="False"/>
           
        </StackLayout>
    </ContentPage.Content>
</ContentPage>